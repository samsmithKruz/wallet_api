                                "properties": {
                                    "user_id": {
                                        "type": "integer",
                                        "example": 1
                                    },
                                    "initial_balance": {
                                        "type": "number",
                                        "format": "float",
                                        "example": 1000,
                                        "nullable": true
                                    }
                                },
                                "type": "object"
